# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# ============================================
# Copy this file to .env and fill in your values
# ============================================

# ============================================
# EIA API (For Natural Gas Price Data)
# ============================================
# Get your free API key at: https://www.eia.gov/opendata/register.php
EIA_API_KEY=your_eia_api_key_here

# ============================================
# Blockchain Configuration
# ============================================
# Your wallet private key (NEVER commit this!)
PRIVATE_KEY=your_private_key_here

# For manual price updates (6 decimals, e.g., 3930000 = $3.93)
NEW_PRICE=3930000

# ============================================
# RPC Endpoints
# ============================================
COSTON2_RPC=https://coston2-api.flare.network/ext/C/rpc
BASE_SEPOLIA_RPC=https://sepolia.base.org
SEPOLIA_RPC=https://rpc.sepolia.org

# ============================================
# Uniswap V4 Configuration
# ============================================
POOL_MANAGER_ADDRESS=

# ============================================
# Contract Addresses (populated after deployment)
# ============================================
# Run DeployCoston2.s.sol and add the deployed address here
DISRUPTION_ORACLE_ADDRESS=
NATGAS_TOKEN_ADDRESS=
MOCK_USDC_ADDRESS=
HOOK_ADDRESS=

# ============================================
# API Keys (Optional)
# ============================================
ETHERSCAN_API_KEY=
BASESCAN_API_KEY=

# ============================================
# FDC Configuration (Advanced)
# ============================================
FDC_VERIFIER_URL=https://fdc-verifiers-testnet.flare.network
